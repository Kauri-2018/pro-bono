{
  "name": "pro-bono",
  "version": "0.2.0",
  "description": "A project for the Auckland Community Law Centre, to connect clients with lawyers working pro-bono",
  "main": "server/index.js",
  "author": "EDA",
  "license": "ISC",
  "engines": {
    "node": "=9.11.0"
  },
  "scripts": {
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "dev": "nodemon server --watch server & yarn build --watch",
    "start": "node server",
    "build": "webpack --config ./client/webpack.config.js",
    "test": "jest --watchAll",
    "postinstall": "yarn build & yarn knex migrate:latest",
    "resetdb": "yarn knex migrate:rollback; yarn knex migrate:latest && yarn knex seed:run"
  },
  "jest": {
    "setupFiles": [
      "./tests/client/configure.js",
      "./tests/client/setup-dom.js"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-3"
    ]
  },
  "dependencies": {
    "@material-ui/icons": "^1.0.0-beta.43",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^8.1.1",
    "jwt-decode": "^2.2.0",
    "knex": "^0.14.3",
    "mailgun-js": "^0.18.0",
    "material-ui": "^1.0.0-beta.47",
    "pg": "^7.4.1",
    "react": "^16.2.0",
    "react-async-script": "^0.9.1",
    "react-dom": "^16.2.0",
    "react-google-recaptcha": "^0.11.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "socks-proxy-agent": "^4.0.1",
    "sodium": "^2.0.3",
    "superagent": "^3.8.2",
    "webpack": "^3.11.0",
    "webpack-livereload-plugin": "^1.0.0"
  },
  "devDependencies": {
    "babel-runtime": "^6.26.0",
    "cheerio": "^1.0.0-rc.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.3.0",
    "nock": "^9.2.5",
    "nodemon": "^1.15.0",
    "redux-mock-store": "^1.5.1",
    "sqlite3": "^3.1.13",
    "supertest": "^3.0.0"
  }
}
